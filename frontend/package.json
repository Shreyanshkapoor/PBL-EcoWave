{
  "name": "echowave",
  "version": "1.0.0",
  "description": "EchoWave - Podcast Recording Platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run cmd/server/main.go",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o bin/server cmd/server/main.go",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod tidy",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose up --build -d"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "podcast",
    "recording",
    "webrtc",
    "react",
    "golang",
    "postgresql"
  ],
  "author": "EchoWave Team",
  "license": "MIT"
}
